                <div> <input type="checkbox" id="checkbox23" name="checkbox_select" onclick="updateCheckBox(23)" />
                    <label id="label23" for="checkbox23">Community and Social Services</label></div>
                <div> <input type="checkbox" id="checkbox24" name="checkbox_select" onclick="updateCheckBox(24)" />
                    <label id="label24" for="checkbox24">Clerical and Administrative</label></div>
                <div> <input type="checkbox" id="checkbox25" name="checkbox_select" onclick="updateCheckBox(25)" />
